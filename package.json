{
  "name": "synopticon-api",
  "version": "0.6.0",
  "description": "synopticon-api: an open-source platform for real-time multi-modal behavioral analysis and sensor synchronization",
  "main": "src/services/api/server.js",
  "type": "module",
  "scripts": {
    "dev:vite": "bunx --bun vite",
    "build": "bun run build:ts && bunx --bun vite build",
    "build:ts": "bun x tsc --noEmit",
    "build:analyze": "bun run build && bun run scripts/optimize-build.js",
    "build:report": "bun run scripts/optimize-build.js",
    "preview": "bunx --bun vite preview",
    "test": "bun run build:ts && bun test",
    "typecheck": "bun x tsc --noEmit",
    "test:performance": "bun run tests/performance/benchmark.js",
    "test:lazy-loading": "bun test tests/lazy-loading.test.js",
    "build:shaders": "bun run scripts/compile-shaders.js",
    "start": "bun run serve",
    "serve": "bun src/services/api/server.js",
    "dev": "bun --watch src/services/api/server.js",
    "dev:hot": "bun --hot src/services/api/server.js",
    "api:test": "curl http://localhost:3000/api/health",
    "mcp": "bun src/services/mcp/server.ts",
    "mcp:dev": "bun --watch src/services/mcp/server.ts",
    "mcp:debug": "MCP_DEBUG=true MCP_LOG_LEVEL=DEBUG bun src/services/mcp/server.ts",
    "setup-mcp": "bun scripts/setup-mcp.js",
    "add-mcp-tools": "bun scripts/add-mcp-tools.js",
    "start:with-mcp": "concurrently \"bun serve\" \"bun mcp\"",
    "test:mcp": "bun test tests/unit/mcp-*.test.js",
    "ci:quality": "bun run code-quality-gate",
    "pre-commit": "bun run lint:fix && bun run typecheck",
    "pre-push": "bun run quality:strict",
    "lint": "bunx eslint 'src/**/*.js' 'examples/**/*.js' --ignore-pattern '**/*.backup'",
    "lint:fix": "bunx eslint 'src/**/*.js' 'examples/**/*.js' --fix --ignore-pattern '**/*.backup'",
    "lint:check": "bunx eslint 'src/**/*.js' 'examples/**/*.js' --max-warnings 1200 --ignore-pattern '**/*.backup'",
    "lint:strict": "bunx eslint 'src/**/*.js' 'examples/**/*.js' --max-warnings 20 --ignore-pattern '**/*.backup'",
    "quality": "bun run lint:check && bun run typecheck",
    "quality:strict": "bun run lint:strict && bun run typecheck && bun run knip:check",
    "knip:check": "bunx knip --reporter compact",
    "knip:fix": "bunx knip --fix",
    "code-quality-gate": "bun scripts/code-quality-check.js",
    "quality:simple": "bun scripts/simple-quality-check.js"
  },
  "keywords": [
    "face-detection",
    "computer-vision",
    "lightweight",
    "mediapipe",
    "eye-tracking",
    "emotion-analysis",
    "facial-landmarks",
    "pose-estimation",
    "browser",
    "speech-analysis",
    "mcp",
    "model-context-protocol",
    "llm-integration",
    "claude-desktop",
    "telemetry",
    "simulator-integration",
    "msfs",
    "x-plane",
    "beamng",
    "vatsim",
    "multi-modal",
    "behavioral-analysis",
    "real-time-streaming"
  ],
  "author": "Synopticon API Team",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "^1.2.20",
    "eslint": "^9.34.0",
    "knip": "^5.63.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "trustedDependencies": [
    "core-js",
    "esbuild",
    "vite",
    "vitest"
  ],
  "optionalDependencies": {
    "canvas": "^3.2.0"
  },
  "dependencies": {},
  "engines": {
    "bun": ">=1.0.0"
  },
  "browserslist": [
    "Chrome >= 56",
    "Firefox >= 51",
    "Safari >= 15",
    "Edge >= 79"
  ],
  "documentation": {
    "performance": "PERFORMANCE_OPTIMIZATION_LOG.md",
    "audit": "FINAL_AUDIT_REPORT.md",
    "placeholders": "PLACEHOLDERS_AND_MOCKS.md",
    "readme": "README.md"
  },
  "notes": {
    "lightweight_migration": "MAJOR: Replaced 635MB TensorFlow.js stack with 5MB MediaPipe. Bundle size reduced from 700MB to 43MB (94% reduction).",
    "bun_native_migration": "BREAKING: Full migration to Bun.serve native HTTP server. All Node.js servers converted to Bun.serve.",
    "zero_dependencies": "MAJOR: Eliminated all runtime dependencies. ws dependency removed (using Bun built-in WebSocket).",
    "last_optimization": "2025-08-25",
    "bundle_size_evolution": "v0.4.0: 700MB → v0.5.0: 43MB → v0.5.4: 38.8MB (zero deps)",
    "migration_info": "Fully migrated to Bun native: MediaPipe Face Detection + Bun.serve + zero external dependencies",
    "performance_improvements": {
      "bundle_size": "94% reduction (700MB → 43MB) + 4.6MB zero dependencies = 38.8MB total",
      "install_time": "10x faster installs (no dependencies)",
      "memory_usage": "Minimal runtime memory footprint",
      "detection_performance": "Improved latency with MediaPipe",
      "http_performance": "17x faster with Bun.serve vs Node.js HTTP",
      "websocket_performance": "Native Bun WebSocket vs external libraries",
      "startup_time": "Instant startup with Bun runtime",
      "docker_images": "20x smaller container sizes"
    },
    "breaking_changes": {
      "runtime": "Bun-only (Node.js support removed)",
      "dependencies": "Zero external dependencies",
      "servers": "All servers use Bun.serve (Node.js HTTP removed)",
      "websockets": "Native Bun WebSocket (ws library removed)",
      "express": "Removed - Bun.serve only"
    },
    "compatibility": {
      "runtime": "Bun >=1.0.0 required",
      "mediapipe": "Primary face detection pipeline",
      "api_compatibility": "Full API backward compatibility maintained",
      "deployment": "Bun-native deployment only"
    }
  }
}
