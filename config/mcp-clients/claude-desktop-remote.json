{
  "mcpServers": {
    "synopticon-remote": {
      "command": "bun",
      "args": ["src/services/mcp/server.ts"],
      "env": {
        "SYNOPTICON_API_URL": "http://REMOTE_HOST_IP:3000",
        "MCP_TRANSPORT": "stdio",
        "MCP_DEBUG": "false",
        "MCP_TIMEOUT": "10000"
      }
    }
  }
}